                size_hint: .25, None
                pos_hint: {'center_y': .5}
                theme_text_color: "Custom"
                text_color: "white"
                font_style: 'Caption'
                line_color: app.theme_cls.primary_color
                md_bg_color: app.theme_cls.primary_color
                theme_icon_color: "Custom"
                icon_color: "white"
                on_release: app.add_question(root)
            MDRectangleFlatIconButton:
                icon: "plus-circle"
                text: "Đáp án"
                adaptive_size: True
                elevation: 1
                size_hint: .25, None
                pos_hint: {'center_y': .5}
                theme_text_color: "Custom"
                text_color: "white"
                font_style: 'Caption'
                line_color: app.theme_cls.primary_color
                md_bg_color: app.theme_cls.primary_color
                theme_icon_color: "Custom"
                icon_color: "white"
                on_release: app.add_choice_input(root)
            MDRectangleFlatIconButton:
                icon: "multimedia"
                text: "Chèn"
                adaptive_size: True
                elevation: 1
                size_hint: .25, None
                pos_hint: {'center_y': .5}
                theme_text_color: "Custom"
                text_color: "white"
                font_style: 'Caption'
                line_color: app.theme_cls.primary_color
                md_bg_color: app.theme_cls.primary_color
                theme_icon_color: "Custom"
                icon_color: "white"
                on_release: app.file_manager_open(root, 'tao_bai_thi')
            MDRectangleFlatIconButton:
                icon: "content-save"
                text: "Lưu"
                font_style: 'Caption'
                adaptive_size: True
                elevation: 1
                size_hint: .25, None
                pos_hint: {'center_y': .5}
                theme_text_color: "Custom"
                text_color: "white"
                line_color: app.theme_cls.primary_color
                md_bg_color: app.theme_cls.primary_color
                theme_icon_color: "Custom"
                icon_color: "white"
                on_release:
                    app.luu_bai_thi(root.ids.Container.children, root.ids.TenBaiThi.text, root.ids.ChuDe.text, root.mode)
        MDBoxLayout:
            id: saved_questions_layout
            orientation: 'vertical'
            size_hint_y: .6
            MDScrollView:
                bar_width: 12
                bar_color: app.theme_cls.primary_color
                bar_width: 10
                MDBoxLayout:
                    id: Container
                    orientation: "vertical"
                    adaptive_height: True
                    padding: '10dp', 0, '10dp', 0

<CaNhan>:
    # source: ''
    taikhoan: app.user['username']
    matkhau: app.user['password']
    avatar: app.user['avatar']
    cols: 1
    spacing: '15dp'
    padding: '15dp', 0, '15dp', '30dp'
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            size_hint: 1, .1
            text: 'Ảnh đại diện'
            halign: 'center'
        MDRelativeLayout:
            size_hint: 1, .9
            FitImage:
                id: img
                # source: root.source
                source: root.avatar
                radius: self.width/2, self.width/2, self.width/2, self.width/2
                size_hint: .75, 1
                pos_hint: {'center_x': .5, 'center_y': .5}
                canvas.before:
                    Color:
                        rgba: 0,0,0,.5
                    Ellipse:
                        pos: self.pos
                        size: self.size
            MDIconButton:
                icon: "pencil-outline"
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: None, None
                size: '20dp', '20dp'
                icon_size: 40
                on_release: app.file_manager_open(root, 'doi_anh_dai_dien')
    MDTextField:
        id: TaiKhoan
        hint_text: "Tài khoản"
        # text: app.user['new_username']
        text: root.taikhoan
        font_name: 'NotoSans'
        max_text_length: 40
    MDTextField:
        id: MatKhau
        hint_text: "Mật Khẩu"
        # text: app.user['new_password']
        text: root.matkhau
        font_name: 'NotoSans'
        max_text_length: 40
    MDRaisedButton:
        id: Save
        elevation: 1
        size_hint_x: 1
        text: "Lưu"
        md_bg_color: app.theme_cls.primary_color
        on_release: app.show_toast_luu_thong_tin(TaiKhoan, MatKhau)
    MDRaisedButton:
        id: LogOut
        elevation: 1
        size_hint_x: 1
        text: "Đăng xuất"
        md_bg_color: "red"
        on_release: app.logout()
    MDRaisedButton:
        id: CloseApp
        elevation: 1
        size_hint_x: 1
        text: "Exit"
        md_bg_color: "red"
        on_release: app.stop()

