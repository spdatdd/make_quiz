<DoExam>:
    name_exam: ''
    mang_cau_hoi: []
    tong_cau_hoi: 0

    MDBoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'

        MDRelativeLayout:
            size_hint: 1, .05

            MDIconButton:
                id: GoOut
                size_hint: .15, 1
                pos_hint: {'x': 0}
                icon: 'arrow-left'
                on_release: app.exit_exam(root)

            MDLabel:
                id: STTCauHoi
                size_hint: .25, 1
                pos_hint: {'x': .25}
                text: f'01/'+f'{root.tong_cau_hoi}'.zfill(2)

            MDLabel:
                id: Time
                size_hint: .25, 1
                pos_hint: {'x': .5}
                text: ''
                theme_text_color: 'ContrastParentBackground'

            MDFlatButton:
                id: Finish_Exam
                size_hint: .25, 1
                pos_hint: {'right': 1}
                text: "Hoàn Thành"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                on_release: app.finish_exam(root)

        MDCarousel:
            id: Container
            size_hint: 1, .95
            direction: 'right'
            on_slide_complete:
                root.ids.STTCauHoi.text=f'{self.index + 1}'.zfill(2)+'/'+f'{root.tong_cau_hoi}'.zfill(2)

<UserCard>
    orientation: "vertical"
    adaptive_height: True
    md_bg_color: app.theme_cls.primary_color if self.selected else "#e6e6e6"
    radius: 16
    padding: 0, "16dp", 0, "16dp"
    MDLabel:
        text: root.text
        adaptive_height: True
        padding: "16dp", 0, "16dp", 0
        shorten: True
        shorten_from: "right"

<List_Exam>:
    orientation: 'vertical'
    spacing: "5dp"
    MDSegmentedButton:
        id: segment
        size_hint: 1, .05
        on_marked: app.local_list_on_marked(root, *args)
        MDSegmentedButtonItem:
            id: created
            text: "Đã tạo"
        MDSegmentedButtonItem:
            text: "Đã làm"
    MDRelativeLayout:
        size_hint: 1, .85
        FixedRecycleView:
            id: card_list
            viewclass: "UserCard"
            data: app.local_data
            scrollable_distance: box.height - self.height
            do_scroll_x: False
            do_scroll_y: True
            on_scroll_y: app.local_check_pull_refresh(self, box)
            bar_color: app.theme_cls.primary_color
            bar_width: 10
            SelectableRecycleGridLayout:
                id: box
                orientation: 'vertical'
                spacing: "10dp"
                default_size: None, dp(50)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
        MDBoxLayout:
            pos_hint: {"top": 1, 'center_x':.5}
            adaptive_size: True
            spacing: '5dp'
            MDLabel:
                id: refreshLabel
                opacity: 1 if app.local_refreshing or card_list.scroll_y < 0 else 0
                size_hint: None, None
                pos_hint: {'center_y':.5}
                adaptive_size: True
                halign: 'center'
                text: 'Đang tải dữ liệu...' if app.local_refreshing else 'Vuốt lên để tải dữ liệu!'
            MDSpinner:
                size_hint: None, None
                size: '20dp', '20dp'
                pos_hint: {'center_y':.5}
                active: True if app.local_refreshing else False
                determinate: True
        MDLabel:
            size_hint_y: None
            height: self.texture_size[1]
            text:
                F'''app_data: {len(app.local_data)}
                '''
        MDSpinner:
            id: LoadBaiThi
            size_hint: None, None
            size: dp(60), dp(60)
            line_width: dp(4)
            pos_hint: {'center_x': .5, 'center_y': .5}
            active: True if app.load_bai_thi else False
            determinate: True
    MDBottomAppBar:
        id: bottom_appbar
        elevation: 1
        size_hint: 1, .1
        MDFabBottomAppBarButton:
            icon: "plus"
            adaptive_size: True
            md_bg_color: "#373A22"
            on_release: app.chinh_sua_bai_thi('add')

