<ImageMedia>:
    adaptive_height: True
    spacing: "56dp"
    pos_hint: {"center_x": .5, "center_y": .5}

    MDCard:
        padding: 4
        size_hint: 1, None
        height: self.width/2
        radius: 0, 0, 0, 0

        MDRelativeLayout:
            FitImage:
                id: img
                source: ''
            MDIconButton:
                icon: "delete"
                pos_hint: {"top": 1, "right": 1}
                on_release: root.parent.remove_widget(root)

<AudioMedia>:
    path_txt : ''
    audio: ''
    position_progress: 0
    size_hint: 1, None
    height: '50dp'

    MDRelativeLayout:
        MDBoxLayout:
            id: audioMedia
            MDIconButton:
                id: audio
                icon: "play"
                pos_hint: {'center_y': .5}
                theme_icon_color: "Custom"
                icon_color: app.theme_cls.primary_color
                on_release: app.start_audio(root)

            MDProgressBar:
                size_hint: 1, None
                height: '30dp'
                pos_hint: {'center_y': .5}
                id: progress_bar
                type: 'determinate'
                value: 0

        MDIconButton:
            icon: "delete"
            pos_hint: {"top": 1, "right": 1}
            on_release:
                root.parent.remove_widget(root)
                app.delete_audio(root)

<VideoMedia>:
    adaptive_height: True
    spacing: "56dp"

    MDCard:
        padding: 0
        size_hint: 1, None
        height: (self.width/4)*3
        radius: 0, 0, 0, 0

        MDRelativeLayout:

            VideoPlayer:
                id: vid
                source: ""
                keep_ratio: True
                options: {'allow_stretch': True}
                state: 'stop'

            MDIconButton:
                icon: "delete"
                theme_text_color: "Error"
                pos_hint: {"top": 1, "right": 1}
                on_release:
                    vid.state = 'stop'
                    root.parent.remove_widget(root)

<CreateExamScreen>:
    mode: ''
