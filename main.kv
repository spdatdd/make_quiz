<LoginScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '15dp'
        padding: '15dp'
        size_hint: .8, .8
        pos_hint: {'center_x': .5, 'center_y': .5}

        MDLabel:
            text: 'Trắc nghiệm'
            halign: "center"
            theme_text_color: 'Custom'
            text_color: 1, 0, 1, 1
            font_style: 'H4'

        MDTextField:
            id: username_input
            hint_text: 'Tài khoản'
            mode: "rectangle"
            font_name: 'NotoSans'

        MDTextField:
            id: password_input
            hint_text: 'Mật khẩu'
            password: True
            mode: "rectangle"
            font_name: 'NotoSans'

        MDGridLayout:
            cols: 3
            orientation: 'rl-tb'
            spacing: 30, 0

            MDFlatButton:
                id: Register
                text: 'Chưa có tài khoản ?'
                on_press:
                    app.sm.current = 'register'

            MDRaisedButton:
                id: Login
                elevation: 1
                text: 'Login'
                on_release: app.login(username_input.text, password_input.text)

<RegisterScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '15dp'
        padding: '15dp'
        size_hint: .8, .8
        pos_hint: {'center_x': .5, 'center_y': .5}

        MDLabel:
            text: 'Trắc nghiệm'
            halign: "center"
            pos_hint: {'center_x': .5, 'center_y': .5}
            theme_text_color: 'Custom'
            text_color: 1, 0, 1, 1
            font_style: 'H4'

        MDTextField:
            id: username_input
            hint_text: 'Tài khoản'
            mode: "rectangle"
            font_name: 'NotoSans'

        MDTextField:
            id: password_input
            hint_text: 'Mật khẩu'
            password: True
            mode: "rectangle"
            font_name: 'NotoSans'

        MDTextField:
            id: re_password_input
            hint_text: 'Nhập lại mật khẩu'
            password: True
            mode: "rectangle"
            font_name: 'NotoSans'

        MDGridLayout:
            cols: 4
            orientation: 'rl-tb'
            spacing: '15dp'

            MDFlatButton:
                id: Login
                text: 'Có tài khoản ?'
                on_press:
                    app.sm.current = 'login'
                size_hint: None, None
                size_x: 300

            MDRaisedButton:
                id: Register
                elevation: 1
                text: 'Register'
                size_hint: None, None
                size_x: 300
                on_release:
                    app.register(username_input.text, password_input.text, re_password_input.text)

<IconListItem>
    IconLeftWidget:
        icon: root.icon

<Choice>:
    adaptive_height: True

    MDCheckbox:
        size_hint_x: .1
        id: Dung

    MDTextField:
        id: CauTraLoiDapAn
        adaptive_height: True
        hint_text: 'Nhập đáp án...'
        multiline: True
        font_name: 'M_PLUS_Rounded_1c'

    MDIconButton:
        icon: 'delete'
        pos_hint: {'center_y': .5}
        on_release:  root.parent.remove_widget(root)

<YourThink>:
    adaptive_height: True
    padding: 20, 10, 20, 10

    MDTextField:
        id: CauTraLoiDoan
        hint_text: 'Điền vào câu trả lời...'
        multiline: True
        font_name: 'M_PLUS_Rounded_1c'

    MDIconButton:
        icon: 'delete'
        pos_hint: {'center_y': .5}
        on_release: root.parent.remove_widget(root)

<Question>:
    adaptive_height: True

    MDTextField:
        id: CauHoi
        adaptive_height: True
        hint_text: 'Nhập câu hỏi...'
        multiline: True
        font_name: 'M_PLUS_Rounded_1c'

    MDIconButton:
        icon: 'delete'
